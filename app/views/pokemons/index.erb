<header>
  <h1>Pokemons</h1>
</header>
<main role="main">
  <p>Your favourite pokemon is <%= fav_pokemon %></p>
  <table>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Pokedex Number</th>
      <th>Type</th>
    </tr>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.name %></td>
        <td><img src="<%= pokemon.image_url %>"></td>
        <td><%= pokemon.pokedex_number %></td>
        <td><%= pokemon.pokemon_type %></td>
      </tr>
    <% end %>
  </table>

  <p>Your favourite pokemon is <%= fav_pokemon %></p>
</main>
